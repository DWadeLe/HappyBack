<!-- 顶部导航栏 WXML 模板 -->
<view class="nav-bar">
  <!-- 左侧返回按钮 -->
  <view class="nav-bar__back">
    <image class="nav-bar__back-img" src="/images/icon/back.png"></image>
  </view>
  <!-- 标题 -->
  <view class="nav-bar__title">
    <text>{{title}}</text>
  </view>
  <!-- 右侧扫一扫按钮 -->
  <view class="nav-bar__scan" bindtap="scanCode">
    <image class="nav-bar__scan-img" src="/images/icon/scan.png"></image>
  </view>
</view>