.content {
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: row;
}
.left {
  width: 200rpx;
  flex-shrink: 0;
  border-right: 1rpx solid #eee0c0;
}
.right {
  width: 550rpx;
  flex-grow: 1;
}

.category-item {
  width: 100%;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.category-item-active {
  background-color: #eee0c0;
}

.venueWrap-category {
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  border-bottom: 1rpx solid #eee0c0;
}

.venue-item {
  width: 100%;
  display: flex;
  padding: 5px;
  flex-direction: row;
  /* margin-left: 20rpx; */
  align-items: center;
  justify-content: flex-start;
  /* border-bottom: 1rpx solid #f2f2f2; */
}

.venue-pic {
  width: 150px;
  height: 120px;
  flex-shrink: 0;
}

.venue-info {
  display: flex;
  flex-direction: column;
  padding: 0px 5px 0px 5px;
  height: 100px;
}
.venueName {
  font-size: 30rpx;
  font-weight: bold;
    /* color:#f48333; */

}
.venueDesc {
    font-size: 17rpx;
}
