.goods-name {
  padding-left: 30rpx;
  padding-top: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #eee0c0;
}
.goods-price {
  color: #f48333;
  margin-top: 30rpx;
  margin-left: 30rpx;
  border-bottom: 1px solid #eee0c0;
}
.goods-image {
  width:750rpx;
  display:block;
}
.size-label-box  .label{
  font-size:26rpx;
  color:#000;
  padding-left: 30rpx;
  padding: 30rpx 0 20rpx 30rpx;
}
.size-label-box .label-item-box{
  display: flex;
  margin-left: 30rpx;
  flex-direction: row;
  flex-wrap:wrap;
}
.size-label-box .label-item{
  font-size:26rpx;
  padding: 14rpx 20rpx;
  border: 1px solid #eee0c0;
  border-radius: 6rpx;
  margin: 0 20rpx 20rpx 0;
}
.size-label-box .label-item.active{
  color: #e64340;
  border: 1px solid #e64340;
}

.buy-num-box{
   display: flex;
   justify-content: space-between;
   padding: 30rpx 30rpx 48rpx 0;
   margin-left: 30rpx; 
   /* border-top: 1px solid #eee0c0; */
   margin-top: 30rpx;
   align-items: center;
}
.num-label{
  font-size:26rpx;
}
.buy-num-box .num-box{
  display: flex;
}
.buy-num-box .num-box .num-jian,
.buy-num-box .num-box .num-input,
.buy-num-box .num-box .num-jia{
  width: 80rpx;
  height: 64rpx;
  line-height: 62rpx;
  text-align: center;
  border: 1px solid #eee0c0;
}
.buy-num-box .num-box .num-input{
  font-size: 28rpx;
}
.buy-num-box .num-box .num-input input{
  height: 100%;
}
.buy-num-box .num-box .hui{
  color: #aaa;
}
.btns {
  display: flex;
  justify-content:space-around;
}
.goIndex {
  position:fixed;
  right:20rpx;
  top:20rpx;
  width:80rpx;
  height:80rpx;
  border-radius:15px;
  background-color: #fff;
  text-align: center;
}
.goIndex-icon {
  width:50rpx;
  height:50rpx;
  margin-top: 15rpx;
}
.yd-view{
  position: fixed; /* 将元素固定在页面底部 */
  bottom: 10rpx; /* 距离页面底部为0 */
  left: 10rpx; /* 距离页面左边界为0 */
  width: 100%; /* 宽度占满整个页面 */
}
.yd-btn{
   background-color: rgb(243, 114, 28) !important;
}
.orignal-price{
  transform: skew(-10deg); /* 将文字倾斜10度 */
}
.block {
  width: 100vw;
  height: 540px;
  background: #fff;
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
}

.wrapper {
  margin: 32rpx;
  display: block;
}

.header {
  display: flex;
  align-items: center;
  height: 116rpx;
}

.title {
  flex: 1;
  text-align: center;
  font-weight: 600;
  font-size: 36rpx;
}

.btn {
  font-size: 32rpx;
  padding: 32rpx;
}

.btn--cancel {
  color: rgba(0, 0, 0, .6);
}

.btn--confirm {
  color: #0052d9;
}

.to_pay{
  position: fixed; /* 将元素固定在页面底部 */
  bottom: 10rpx; /* 距离页面底部为0 */
  left: 0; /* 距离页面左边界为0 */
  width: 100%; /* 宽度占满整个页面 */

}

.yd-py-btn{
  margin-right: 20rpx;
   float:right;
   color: #fff !important;
   background-color: #f48333 !important;
}
.yd-price{
  margin-left: 20rpx;
   text-align: center;
   float: left;
   color: #f48333;
}
