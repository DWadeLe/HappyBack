<!--pages/user/user.wxml-->
<view class="page">
  <view class="top_color"></view>
  <t-grid class="user_top" column="1" theme="card">
    <view class='user_top_center'>
      <view class='user_photo'>
        <!--<open-data type="userAvatarUrl"></open-data>-->
        <button wx:if="{{canIUse}}" open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo" style="padding-left:0px;background-color:#fff;border-radius:70rpx;height:140rpx;width:140rpx;">
          <image style="height:140rpx;width:140rpx;" class="slide-image" mode="aspectFill" src="{{avatarUrl}}"></image>
        </button>
      </view>
      <view class='user_text'>
        <view class='user_name'><text style="font-size:34rpx;">{{userNickName}}</text>
        </view>
        <!--<view class='user_star'>五星会员</view>-->
        <view class='user_phone'><text>{{mobile}}</text>
          <image wx:if="{{isVip}}" style="width:2rem;height:2rem;vertical-align:middle;margin-left:10rpx;" src="../../images/vip.png"></image>
        </view>
      </view>
    </view>

  </t-grid>

  <t-grid class="service_list" column="1" theme="card">
    <t-input class="weui-cell__bd" disabled prefixIcon="root-list" id="1" label="我的订单" bindtap='goMap' value="{{shopDetail.address}}" align="left">
      <view slot="suffix" class="suffix">
        <view class="weui-cell__ft weui-cell__ft_in-access"></view>
      </view>
    </t-input>
    <t-input class="weui-cell__bd"  disabled prefixIcon="star" label="我的会员" id="2" bindtap='goMap' value="{{shopDetail.address}}" align="left">
      <view slot="suffix" class="suffix">
        <view class="weui-cell__ft weui-cell__ft_in-access"></view>
      </view>
    </t-input>
    <t-input class="weui-cell__bd" disabled prefixIcon="wallet" label="我的卡券" id="3" bindtap='goMap' value="{{shopDetail.address}}" align="left">
      <view slot="suffix" class="suffix">
        <view class='user_list_quan' wx:if="true">
          <view class='user_list_dian' wx:if="true"></view>您有未使用的券
          <view class="weui-cell__ft weui-cell__ft_in-access"></view>
        </view>
      </view>
    </t-input>
    <t-input class="weui-cell__bd" disabled prefixIcon="time" label="我的预约" id="4" bindtap='goMap' value="{{shopDetail.address}}" align="left">
      <view slot="suffix" class="suffix">
        <view class="weui-cell__ft weui-cell__ft_in-access"></view>
      </view>
    </t-input>
  </t-grid>
  <t-grid class="service_list" wx:if="{{isManager}}" column="1" theme="card">
    <t-badge class="manager_tag" count="管理员" offset="{{[0, 0]}}" shape="ribbon" slot="note" />

    <t-input class="weui-cell__bd"  disabled prefixIcon="file-add" label="代客下单" id="2" bindtap='goMap' value="{{shopDetail.address}}" align="left">
      <view slot="suffix" class="suffix">
        <view class="weui-cell__ft weui-cell__ft_in-access"></view>
      </view>
    </t-input>
    <t-input class="weui-cell__bd"  disabled prefixIcon="clear" label="核销卡券" id="2" bindtap='goMap' value="{{shopDetail.address}}" align="left">
      <view slot="suffix" class="suffix">
        <view class="weui-cell__ft weui-cell__ft_in-access"></view>
      </view>
    </t-input>
    <t-input class="weui-cell__bd"  disabled prefixIcon="play-circle-stroke" label="开机计时" id="2" bindtap='goMap' value="{{shopDetail.address}}" align="left">
      <view slot="suffix" class="suffix">
        <view class="weui-cell__ft weui-cell__ft_in-access"></view>
      </view>
    </t-input>
    <t-input class="weui-cell__bd"  disabled prefixIcon="minus-circle" label="关机结束" id="2" bindtap='goMap' value="{{shopDetail.address}}" align="left">
      <view slot="suffix" class="suffix">
        <view class="weui-cell__ft weui-cell__ft_in-access"></view>
      </view>
    </t-input>
  </t-grid>


</view>