<!--pages/vip/index.wxml-->
<view wx:if="{{isVip}}">
  <view class="">
    <!-- <t-icon wx:for="{{userInfo.vip_id}}" wx:key="index" name="star" size="48rpx" prefix="icon" data-name="star" data-type="prefix" bind:click="onIconTap" /> -->
    <t-input class="weui-cell__bd" disabled align="right" label="会员名称" value="{{userInfo.vip_name}}"/>
    <t-input class="weui-cell__bd" disabled align="right" label="失效时间" value="{{userInfo.vip_expire_time}}">
