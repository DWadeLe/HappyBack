          <view slot="suffix" class="suffix">
            <view class="weui-cell__ft_in-access">去续购</view>
          </view>
    </t-input>
  </view>

</view> 
<view wx:else="{{isVip}}">

  <view class="go_buy_vip">
    <text>您还未订购VIP</text>
    <view><t-link size="small" theme="primary" content="去订购" suffixIcon="jump" hover/></view>
  </view>
</view>
